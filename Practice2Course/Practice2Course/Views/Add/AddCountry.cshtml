<!DOCTYPE html>
@model Practice2Course.Data.Models.Countries;

<h1>Добавление страны</h1>

<div class="col-md-7 col-lg-8">
    <form method="post" asp-action="AddCountry" class="form-horizontal">
        <div class="form-group">
            <label asp-for="CountryName"></label>
            <div class="col-12">
                <input asp-for="CountryName" class="form-control">
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImgUrl"></label>
            <div class="col-12">
                <input asp-for="ImgUrl" class="form-control">
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MapUrl"></label>
            <div class="col-12">
                <input asp-for="MapUrl" class="form-control">
                <span asp-validation-for="MapUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <div class="col-12">
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <input class="my-4 btn btn-success" type="submit" value="Добавить страну" />
    </form>
</div>
