<!DOCTYPE html>
@using Practice2Course.Data;
@model Practice2Course.Data.Models.Countries;

<h1>Поиск страны по имени</h1>

<div class="col-md-7 col-lg-8">
    <form method="post" asp-action="CountrySearch" class="form-horizontal">
        <label asp-for="CountryName"></label>
        <div class="form-group">
            <input asp-for="CountryName" class="form-control">
            <span asp-validation-for="CountryName" class="text-danger"></span>
        </div>
        <input class="my-4 btn btn-success" type="submit" value="Поиск" />
    </form>
</div>
